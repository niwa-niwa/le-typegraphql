{
  "name": "ruhuna-app",
  "private": true,
  "scripts": {
    "start": "npx dotenv -e .env -- node dist/server.js",
    "build": "npm run build:next && npm run build:server",
    "dev": "ts-node --project tsconfig.server.json server.ts",
    "build:next": "next build",
    "build:server": "tsc --project tsconfig.server.json",
    "test": "npm run reset@test && npx dotenv -e .env.test -e .env.dev -- jest --runInBand --watch",
    "reset@dev": "npx dotenv -e .env.dev -- prisma migrate reset",
    "reset@test": "npx dotenv -e .env.test -- prisma migrate reset --force --skip-seed",
    "migrate@dev": "npx dotenv -e .env.dev -- npx prisma migrate dev",
    "migrate@test": "npx dotenv -e .env.test -- npx prisma migrate dev ",
    "migration@dev": "npx dotenv -e .env.dev -- prisma migrate dev --create-only",
    "migration@test": "npx dotenv -e .env.test -- prisma migrate dev --create-only"
  },
  "dependencies": {
    "@prisma/client": "^3.4.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "firebase": "^9.6.0",
    "firebase-admin": "^10.0.0",
    "next": "12.0.7",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "16.11.11",
    "@types/react": "17.0.37",
    "@types/supertest": "^2.0.11",
    "babel-jest": "^27.3.1",
    "eslint": "8.4.0",
    "eslint-config-next": "12.0.7",
    "jest": "^27.3.1",
    "jest-mock-extended": "^2.0.4",
    "nodemon": "^2.0.14",
    "npm-run-all": "^4.1.5",
    "prisma": "^3.4.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "4.5.2"
  }
}
